{
	"name": "ninjaparade/cart",
	"type": "platform-extension",
	"description": "Shopping cart",
	"authors": [
		{
			"name": "Ninjaparade Digital Inc.",
			"email": "ninja@ninjaparade.ca"
		}
	],
	"repositories": [
		{
			"type": "composer",
			"url": "http://packages.cartalyst.com"
		}
	],
	"require": {
		"php": ">=5.4.0",
	        "cartalyst/composer-installers": "1.2.*",
		"illuminate/support": "~4.2",
		"cartalyst/cart": "1.1.*",
		"cartalyst/converter": "1.1.*"
	},
	"autoload": {
		"classmap": [
			"database/migrations",
			"database/seeds"
		],
		"psr-4": {
			"Ninjaparade\\Cart\\": "src/"
		}
	},
	"minimum-stability": "dev"
}
